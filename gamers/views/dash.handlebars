<!-- Create Modal (Hidden) -->

<div class="text-center bg-secondary p-3 mb-5">
     <div class="row text-center fs-5 mt-2 text-white">
        <p data-user-id = {{user_id}}>Hello {{user_name}}! Join in on The Carolina Cougars Gamer Talks!!!</p>
    </div>
    <button type="button" class="btn btn-warning shadow-sm fw-bold mb-2" data-bs-toggle="modal"data-bs-target="#createNewGameModal">
        Create a New Gamechat
    </button>
</div>


<div class="modal fade mt-5" id="createNewGameModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" data-user-id={{user_id}}>
            <form class="p-2">
                <div class="mb-3">
                    <label for="titleinput" class="form-label fw-bolder">Title</label>
                    <input type="text" class="form-control new-game-title" id="newGameTitle" placeholder="Enter Gamechat Title">
                </div>
                <div class="mb-3">
                    <label for="contentinput" class="form-label fw-bolder">Content</label>
                    <textarea class="form-control new-game-content" id="newGameTextarea" placeholder="Enter Content..." rows="3"></textarea>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id = "post-new-game" class="btn btn-warning">Post</button>
            </div>
        </div>
    </div>
</div>


<!-- Body -->
<div class="container">

    <!--Loop Through Each Object in Blogs Array and create a card-->
    {{#each games as |game|}}

    <div class="row mt-4">

        <!--gamechat Collapse Button With Title and Date-->
        <button class="btn btn-warning mb-1" type="button" data-js-gameid = {{game.id}} data-bs-toggle="collapse" data-bs-target="#ids{{game.id}}" aria-expanded="false" aria-controls="collapse">
            <span class="fw-bold">{{game.title}}</span>
            <br>
            <span class="fst-italic">{{{format_date game.date_created}}}</span>
        </button>

        <!--under Button gamechat card with Username, content and comments-->
        <div class="collapse mt-1" id="ids{{game.id}}"> 
            <div class="card text-center px-0 py-0 shadow p-3 mb-3 bg-body rounded">
                <div class="card-header bg-light">
                    <span>{{game.user.user_name}}</span>
                </div>
                <div class="card-body pe-0">
                    <p class="card-text">{{game.content}}</p>
                    <h6 class="card-title">Comments</h6>
                    <div>
                        {{#each game.comments as |comment|}}       
                        <div class="fw-ligher fst-italic">{{comment.comment}} - <span class = "text-warning fw-bold"> USER {{comment.user_id}} </span> | <span> {{format_date comment.date_created}}</span></div>
                        {{/each}}
                        
                    </div>
                </div>
            </div>

            <!--Buttons Container For Comment, Edit, Delete-->
            <div class="text-center buttons-container" data-gameid = {{game.id}} data-userid = {{game.user_id}}>

                <!--comment Button-->
                <button type="button" class=" comment-game btn btn-info mb-3 shadow-sm" data-bs-toggle="modal" data-bs-target="#commentModal{{game.id}}">
                    <i class="far fa-comment"></i>
                </button>

                    <!--render when comment-->
                    <div class="modal fade mt-5" id="commentModal{{game.id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">

                            <!--content-->
                            <div class="modal-content" data-currentuser-id={{user_id}} data-game-id={{game.id}}>
                                <form class="p-2">
                                    <div class="mb-3">
                                        <label for="contentinput" class="form-label fw-bolder">Comment</label>
                                        <textarea class="form-control new-comment" placeholder="Enter Comment..."rows="3"></textarea>
                                    </div>
                                </form>

                                <!--footer With Buttons-->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-info post-comment">Comment</button>
                                </div>

                            </div>

                        </div>

                    </div>
                    
                <!--rendering content with edit gamechat button-->
                <button type="button" class=" edit-game btn btn-warning mb-3 shadow-sm" data-bs-toggle="modal" data-bs-target="#editModal{{game.id}}">
                    <i class="fas fa-pencil-alt"></i>
                </button>

                    <!--rendering when edit-->
                    <div class="modal fade mt-5" id="editModal{{game.id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog">

                            <!--Content-->
                            <div class="modal-content" data-game-id={{game.id}}>
                                <form class="p-2">

                                    <div class="mb-3">
                                        <label for="titleinput" class="form-label fw-bolder">Title</label>
                                        <input type="text" class="form-control new-blog-title" id="modal2"
                                            placeholder="Enter GameChat Title" value="{{blog.title}}">
                                    </div>

                                    <div class="mb-3">
                                        <label for="contentinput" class="form-label fw-bolder">Content</label>
                                        <textarea class="form-control new-game-content" id="exampleFormControlTextarea1" placeholder="Enter Content..."rows="3">
{{game.content}}
                                        </textarea>

                                    </div>
                                </form>

                                <!--Footer With Buttons-->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-warning update-game">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>

                <!--Deleting the gamechat Button-->
                <button type="button" class=" delete-game btn btn-danger mb-3 shadow-sm">
                    <i class="far fa-trash-alt"></i>
                </button>

            </div>
        </div>
    </div>

    {{/each}}

</div>

<!-- Scripts -->
<script src="/js/dash.js"></script>